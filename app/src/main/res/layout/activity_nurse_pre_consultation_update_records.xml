<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    style="@style/ScreenBackground"
    tools:context=".NursePreConsultationUpdateRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        layout="@layout/activity_nurse_pre_consultation_update_records_toolbar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE RECORD"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        style="@style/TexColor"
        android:fontFamily="@font/poppins"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/pink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CardBackground"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edittext"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="User Records"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/poppins"
            style="@style/TexColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name: "
                android:textStyle="bold"
                android:textSize="16dp"
                android:fontFamily="@font/poppins"
                style="@style/TexColor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LeBron James "
                android:textSize="16dp"
                android:fontFamily="@font/poppins"
                style="@style/TexColor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(FN-10017) "
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:fontFamily="@font/poppins"
                style="@style/TexColor"/>

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/pink" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Height"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="@font/poppins"
                style="@style/TexColor"/>

            <EditText
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_box_edittext"
                android:hint="Enter Patient Height (cm)"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Weight"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins"
                    style="@style/TexColor"/>

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_box_edittext"
                    android:drawablePadding="8dp"
                    android:hint="Enter Patient Weight (cm)"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Blood Pressure"
                    style="@style/TexColor"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins" />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_box_edittext"
                    android:drawablePadding="8dp"
                    android:hint="Enter Patient Blood Pressure"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Date Today"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins"
                    style="@style/TexColor"/>

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_box_edittext"
                    android:drawablePadding="8dp"
                    android:hint="mm/dd/yy"
                    android:textSize="16sp"
                    android:padding="12dp"
                    style="@style/TexColor"
                    android:textColorHighlight="@color/cardview_dark_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/pink"
                    android:text="Update Records"
                    style="@style/BtnTexColor"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bck_btn"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/pink"
                    android:text="Go Back!"
                    style="@style/BtnTexColor"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/activity_nurse_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>