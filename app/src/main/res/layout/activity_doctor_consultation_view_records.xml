<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    style="@style/ScreenBackground"
    tools:context=".DoctorConsultationViewRecords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/activity_doctor_consultation_toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW RECORD"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            style="@style/TexColor"
            android:fontFamily="@font/poppins"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/pink" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/CardBackground"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="User Records"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:fontFamily="@font/poppins"
                    style="@style/TexColor"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Name: "
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins"
                        style="@style/TexColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LeBron James "
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins"
                        style="@style/TexColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(FN-10017) "
                        android:textAlignment="viewEnd"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins"
                        style="@style/TexColor"/>

                </LinearLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/pink" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="AGE"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="21"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="SEX"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="MALE"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="HEIGHT"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="5'10"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            style="@style/TexColor"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="WEIGHT"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="62 Kg"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="BLOOD PRESSURE"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="100/90"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/ScreenBackground"
                                        android:orientation="vertical"
                                        android:gravity="center">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="8dp"
                                            android:text="DATE UPDATED"
                                            android:textSize="16sp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            style="@style/TexColor"
                                            android:fontFamily="@font/poppins"/>

                                        <LinearLayout
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/grey_background"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:layout_marginBottom="8dp"
                                                android:text="2023-04-28"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                style="@style/TexColor"
                                                android:fontFamily="@font/poppins"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/updateRecords"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/pink"
                        style="@style/BtnTexColor"
                        android:text="Proceed to Consult"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/activity_doctor_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>